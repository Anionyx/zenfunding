<h1>Listing dead_people</h1>

<table>
  <thead>
    <tr>
      <th>Name first</th>
      <th>Name mid</th>
      <th>Name last</th>
      <th>Date death</th>
      <th>Date birth</th>
      <th>Ssn</th>
      <th>Cause</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dead_people.each do |dead_person| %>
      <tr>
        <td><%= dead_person.name_first %></td>
        <td><%= dead_person.name_mid %></td>
        <td><%= dead_person.name_last %></td>
        <td><%= dead_person.date_death %></td>
        <td><%= dead_person.date_birth %></td>
        <td><%= dead_person.ssn %></td>
        <td><%= dead_person.cause %></td>
        <td><%= link_to 'Show', dead_person %></td>
        <td><%= link_to 'Edit', edit_dead_person_path(dead_person) %></td>
        <td><%= link_to 'Destroy', dead_person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

