<h1>Listing policy_valuations</h1>

<table>
  <thead>
    <tr>
      <th>Amount</th>
      <th>Date assign</th>
      <th>Policy</th>
      <th>Dead person</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @policy_valuations.each do |policy_valuation| %>
      <tr>
        <td><%= policy_valuation.amount %></td>
        <td><%= policy_valuation.date_assign %></td>
        <td><%= policy_valuation.policy %></td>
        <td><%= policy_valuation.dead_person %></td>
        <td><%= link_to 'Show', policy_valuation %></td>
        <td><%= link_to 'Edit', edit_policy_valuation_path(policy_valuation) %></td>
        <td><%= link_to 'Destroy', policy_valuation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

